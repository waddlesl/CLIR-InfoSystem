@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>CLIR Library Management System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="icon" type="image/x-icon" href="~/images/clirlogo.png" />
    <style>
        html, body {
            margin: 0;
            height: 100%;
        }

            body::before {
                content: "";
                position: fixed;
                inset: 0;
                z-index: -1;
                margin: 0;
                transform: scale(1.1);
                background-image: linear-gradient(red,blue,white);
                filter: blur(0px);
            }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .label1 {
            text-align: center;
        }

        .logomain {
            display: flex;
            justify-content: center;
            align-content: center;
            margin-bottom: 20px;
        }

        h2 {
            font-size: 20px;
            font-weight: bold;
        }

        p {
            font-size: 15px;
        }

        body {
            background: #fff;
            height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .login-box {
            border-radius: 10px;
            width: 60vh;
            background-color: white; /* Changed to solid white for iPad visibility */
            padding: 40px;
            font-family: 'Segoe UI', sans-serif;
            color: #1a2035; /* Changed text color to dark for white background */
            box-shadow: 7px 5px 30px rgba(0,0,0,0.3);
        }

        .form-control {
            border-radius: 6px;
            height: 45px; /* Slightly taller for touch */
            margin-bottom: 15px;
            border: 1px solid #ced4da;
            box-shadow: 7px 2px 30px rgba(0, 0, 0, 0.1);
        }

        .btn-red {
            width: 100%;
            border: none;
            padding: 10px;
            font-weight: bold;
            border-radius: 10px;
            background-color: #EE1D24;
            color: white;
        }

        .logo {
            width: 100px;
            height: auto;
            margin-bottom: 10px
        }

        .error-text {
            color: #EE1D24;
            text-align: center;
            font-size: 14px;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="login-box shadow-lg">

            <div class="logomain">
                <img src="~/images/clirlogo.png" class="logo" />
            </div>

            <div class="label1">
                <h2>CLIR Library Information Management</h2>
                <p>Please Log In To Continue</p>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="error-text">@ViewBag.Error</div>
            }

            <form asp-action="Login" method="post">
                <input type="text" name="username" class="form-control" placeholder="Username" required />
                <input type="password" name="password" class="form-control" placeholder="Password" required />
                <button type="submit" class="btn-red mt-3">LOGIN</button>
            </form>
        </div>
    </div>
</body>
</html>