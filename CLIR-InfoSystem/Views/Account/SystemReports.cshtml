<div class="container mt-4">
    <h2 class="text-center fw-bold mb-4">System Analytics & Reports</h2>

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm text-center p-3" style="border-radius: 15px; border-top: 5px solid #0d6efd;">
                <h6 class="text-muted text-uppercase">Total Inventory Value</h6>
                <h3 class="fw-bold text-primary">₱ @String.Format("{0:N2}", ViewBag.InventoryValue)</h3>
                <small class="text-muted">Current Book Assets</small>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm text-center p-3" style="border-radius: 15px; border-top: 5px solid #198754;">
                <h6 class="text-muted text-uppercase">System Reach</h6>
                <h3 class="fw-bold text-success">@ViewBag.ActivePatrons</h3>
                <small class="text-muted">Registered Patrons</small>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm text-center p-3" style="border-radius: 15px; border-top: 5px solid #ffc107;">
                <h6 class="text-muted text-uppercase">ODDS Utilization</h6>
                <h3 class="fw-bold text-warning">@ViewBag.TotalOdds</h3>
                <small class="text-muted">Total Requests Processed</small>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mx-auto" style="max-width: 95%; border-radius: 15px;">
        <div class="card-body">
            <h4 class="fw-bold mb-3"><i class="bi bi-graph-up"></i> Librarian Performance (Fulfilled ODDS)</h4>
            <hr />
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Librarian Name</th>
                        <th class="text-center">Fulfilled Requests</th>
                        <th>Productivity Bar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var staff in (Dictionary<string, int>)ViewBag.StaffPerformance)
                    {
                        <tr>
                            <td class="fw-bold">@staff.Key</td>
                            <td class="text-center">@staff.Value</td>
                            <td style="width: 40%;">
                                <div class="progress" style="height: 10px;">
                                    <div class="progress-bar bg-info" role="progressbar"
                                         style="width: @(staff.Value * 5)%"></div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>