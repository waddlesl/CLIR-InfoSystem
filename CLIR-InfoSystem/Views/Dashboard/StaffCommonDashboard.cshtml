<h2>Library Operations Dashboard</h2>
<div class="row g-4 mb-4">
    <div class="col-md-6">
        <div class="card p-3 border-0 shadow-sm">
            <small class="text-muted">Available Books</small>
            <h4 class="mb-0">@ViewBag.BookCount</h4>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card p-3 border-0 shadow-sm">
            <small class="text-muted">Active Patrons</small>
            <h4 class="mb-0">@ViewBag.PatronCount</h4>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-md-4"><div class="dash-card bg-blue">Search Catalog</div></div>
    <div class="col-md-4"><div class="dash-card bg-green">Book a Seat</div></div>
    <div class="col-md-4"><div class="dash-card bg-brown">Service Requests</div></div>
</div>