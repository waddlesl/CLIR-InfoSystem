@if (TempData["Info"] != null)
{
    <div class="alert alert-info border-0 shadow-sm mb-4">
        <i class="fas fa-info-circle me-2"></i> @TempData["Info"]
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success border-0 shadow-sm mb-4">
        <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
    </div>
}

<h2>Welcome to the Library, Patron!</h2>

<div class="row g-4 mt-2">
    <div class="col-md-3">
        <div class="card p-3 border-0 shadow-sm">
            <small class="text-muted">My Active Loans</small>
            <h4 class="mb-0">@ViewBag.MyLoans</h4>
        </div>
    </div>
</div>

<div class="row g-4 mt-3">
    <div class="col-md-4"><div class="dash-card bg-blue">Search Catalog</div></div>
    <div class="col-md-4"><div class="dash-card bg-red">Book A Seat</div></div>
    <div class="col-md-4"><div class="dash-card bg-orange">Request Document</div></div>
</div>