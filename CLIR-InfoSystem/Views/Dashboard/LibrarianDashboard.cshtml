@{
    ViewData["Title"] = "Librarian Dashboard";
    var role = Context.Session.GetString("UserRole");
}

<div class="container-fluid px-4 mt-4 dashboard-font">
    <div class="text-center mb-5">
        <h2 class="fw-bold" style="color: #1a2035;">Librarian Command Center</h2>
        <p class="text-muted">Real-time Operations & System Monitoring</p>
        <hr class="mx-auto" style="width: 60px; height: 4px; background: #EE1D24; opacity: 1; border-radius: 2px;">
    </div>

    <div class="row g-3 mb-5">
        <div class="col-md-3">
            <div class="stat-card bg-primary text-white p-3 shadow-sm">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="display-6 fw-bold">@ViewBag.BookCount</div>
                        <small class="text-uppercase ls-1">Total Books</small>
                    </div>
                    <div class="fs-1 opacity-25"><i class="fa-solid fa-book"></i></div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card bg-success text-white p-3 shadow-sm">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="display-6 fw-bold">@ViewBag.BorrowedCount</div>
                        <small class="text-uppercase ls-1">Active Loans</small>
                    </div>
                    <div class="fs-1 opacity-25"><i class="fa-solid fa-book-open-reader"></i></div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card bg-purple text-white p-3 shadow-sm">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="display-6 fw-bold">@ViewBag.PatronCount</div>
                        <small class="text-uppercase ls-1">Total Patrons</small>
                    </div>
                    <div class="fs-1 opacity-25"><i class="fa-solid fa-users"></i></div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card bg-danger text-white p-3 shadow-sm">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="display-6 fw-bold">@ViewBag.OverdueCount</div>
                        <small class="text-uppercase ls-1">Overdue</small>
                    </div>
                    <div class="fs-1 opacity-25"><i class="fa-solid fa-triangle-exclamation"></i></div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white border-0 py-3 text-center">
                    <h6 class="fw-bold mb-0 text-clir">RECENT ACTIVITY LOG</h6>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table align-middle mb-0">
                            <thead class="bg-light">
                                <tr class="small text-muted text-uppercase">
                                    <th class="ps-4">Patron ID</th>
                                    <th>Status</th>
                                    <th class="pe-4">Date Issued</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.RecentTransactions)
                                {
                                    <tr>
                                        <td class="ps-4 fw-bold text-clir">@item.PatronId</td>
                                        <td>
                                            <span class="capsule @(item.Status == "Borrowed" ? "capsule-primary" : "capsule-success")">
                                                @item.Status
                                            </span>
                                        </td>
                                        <td class="small pe-4">@item.BorrowDate.ToString("MMM dd, yyyy")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white border-0 py-3 text-center">
                    <h6 class="fw-bold mb-0 text-clir">ACTION REQUIRED</h6>
                </div>
                <div class="card-body">
                    @if (ViewBag.OverdueCount > 0)
                    {
                        <div class="alert-item d-flex align-items-center mb-3 text-danger p-3 bg-danger-soft">
                            <div class="fs-4 me-3"><i class="fa-solid fa-circle-exclamation"></i></div>
                            <div>
                                <div class="fw-bold small">Overdue Detected</div>
                                <p class="mb-0 small">@ViewBag.OverdueCount items are past due.</p>
                            </div>
                        </div>
                    }

                    <div class="alert-item d-flex align-items-center mb-3 text-info p-3 bg-info-soft">
                        <div class="fs-4 me-3"><i class="fa-solid fa-couch"></i></div>
                        <div>
                            <div class="fw-bold small">Today's Seat Traffic</div>
                            <p class="mb-0 small">@ViewBag.TodaySeats active reservations.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* New Font Stack: Clean and Professional */
    .dashboard-font {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    }

    body {
        background-color: #f8f9fa;
    }

    .text-clir {
        color: #1a2035;
    }

    .stat-card {
        border-radius: 12px;
        border: none;
        /* Hover transform removed as requested */
    }

    /* Capsuling Status for consistency with your other pages */
    .capsule {
        padding: 4px 12px;
        border-radius: 50px;
        font-size: 0.75rem;
        font-weight: 600;
        display: inline-block;
    }

    .capsule-success {
        background: #d1e7dd;
        color: #0f5132;
    }

    .capsule-primary {
        background: #cfe2ff;
        color: #084298;
    }

    .bg-purple {
        background-color: #6f42c1;
    }

    .bg-danger-soft {
        background-color: #fff1f2;
        border-radius: 10px;
    }

    .bg-info-soft {
        background-color: #e0f2fe;
        border-radius: 10px;
        color: #0369a1;
    }

    /* Removed table-hover effects */
    .table-hover tbody tr:hover {
        background-color: transparent !important;
    }
</style>