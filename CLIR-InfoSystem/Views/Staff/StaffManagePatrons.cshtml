@model IEnumerable<CLIR_InfoSystem.Models.Patron>

<div class="container-fluid px-4 mt-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h4 class="fw-bold mb-0">Patron List</h4>
            <small class="text-muted">
                @DateTime.Now.ToString("MMM dd, yyyy | dddd, h:mm tt")
            </small>
        </div>

        <div class="input-group" style="max-width: 500px;">
            <span class="input-group-text bg-white border-end-0">
                <i class="bi bi-search text-muted"></i>
            </span>
            <input type="text"
                   id="patronSearch"
                   class="form-control border-start-0"
                   placeholder="Search Patron">
            @if (ViewBag.IsStudentAssistant == false)
            {
                <button type="button" class="btn btn-success d-flex align-items-center" onclick="openAddModal()">
                    <b class="me-1" style="font-size: 1.2rem;">+</b> Add Patron
                </button>
            }
            else
            {
                <button type="button" class="btn btn-secondary d-flex align-items-center" onclick="openAddModal()" disabled>
                    <b class="me-1" style="font-size: 1.2rem;">+</b> Add Patron
                </button>
            }
        </div>
    </div>
    <table class="table align-middle">
        <thead>
            <tr>
                <th>Patron ID</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Department</th>
                <th>Program</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="patronTable">
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.PatronId</td>
                    <td>@p.FirstName @p.LastName</td>
                    <td>@p.Email</td>
                    <td> @(p.Department?.DeptCode ?? "N/A")</td>
                    <td>@(p.Program?.ProgramCode ?? "N/A")</td>
                    <td>
                        <button class="btn btn-sm btn-outline-primary" onclick="openEditModal('@p.PatronId')">Edit</button>
                    </td>
                </tr>
            }
        </tbody>

    </table>
    <div class="d-flex justify-content-between align-items-center">

        <!-- PAGE INFO LEFT -->
        <div id="pageInfo" class="small text-muted"></div>

        <!-- PAGINATION RIGHT -->
        <nav>
            <ul class="pagination pagination-sm mb-0" id="pagination"></ul>
        </nav>

    </div>
</div>


<div class="modal fade" id="addModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header"><h5>Add New Patron</h5></div>
            <div class="modal-body">
                <input type="text" id="addId" class="form-control mb-2" placeholder="Patron ID (Max 10 chars)" maxlength="10" />
                <input type="text" id="addFirst" class="form-control mb-2" placeholder="First Name" />
                <input type="text" id="addLast" class="form-control mb-2" placeholder="Last Name" />
                <input type="email" id="addEmail" class="form-control mb-2" placeholder="Email" />

                <label class="small fw-bold">Patron Type</label>
                <select id="addType" class="form-control mb-2" onchange="toggleStudentFields('#addType', '#addDept', '#addProg')">
                    <option value="Student">Student</option>
                    <option value="NonStudent">Faculty/Staff</option>
                </select>

                <label class="small fw-bold">Department</label>
                <select id="addDept" class="form-control mb-2">
                    <option value="">Select Department</option>
                    <option value=1>CAS</option>
                    <option value=2>CCIS</option>
                    <option value=3>CHS</option>
                    <option value=4>CN</option>
                    <option value=5>ETYCB</option>
                    <option value=6>MITL</option>
                    <option value=7>MIA</option>
                    <option value=8>CMET</option>
                    <option value=9>SHS</option>
                </select>

                <label class="small fw-bold">Program</label>
                <select id="addProg" class="form-control mb-2">
                    <option value="">Select a Department first</option>
                </select>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="createPatron()">Create</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header"><h5>Edit Patron</h5></div>
            <div class="modal-body">
                <input type="hidden" id="editId" />
                <label class="small fw-bold">First Name</label>
                <input type="text" id="editFirst" class="form-control mb-2" />
                <label class="small fw-bold">Last Name</label>
                <input type="text" id="editLast" class="form-control mb-2" />
                <label class="small fw-bold">Email</label>
                <input type="email" id="editEmail" class="form-control mb-2" />

                <label class="small fw-bold">Patron Type</label>
                <select id="editType" class="form-control mb-2" onchange="toggleStudentFields('#editType', '#editDept', '#editProg')">
                    <option value="Student">Student</option>
                    <option value="NonStudent">Faculty/Staff</option>
                </select>

                <label class="small fw-bold">Department</label>
                <select id="editDept" class="form-control mb-2">
                    <option value=1>CAS</option>
                    <option value=2>CCIS</option>
                    <option value=3>CHS</option>
                    <option value=4>CN</option>
                    <option value=5>ETYCB</option>
                    <option value=6>MITL</option>
                    <option value=7>MIA</option>
                    <option value=8>CMET</option>
                    <option value=9>SHS</option>
                </select>

                <label class="small fw-bold">Program</label>
                <select id="editProg" class="form-control mb-2"></select>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="savePatron()">Save Changes</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        let rowsPerPage = 10;
        let currentPage = 1;

        function updateTable() {
                let rows = $("#patronTable tr:not(.filtered)");
            let totalRows = rows.length;
            let totalPages = Math.ceil(totalRows / rowsPerPage);

                $("#patronTable tr").hide();

            let start = (currentPage - 1) * rowsPerPage;
            let end = start + rowsPerPage;

            rows.slice(start, end).show();

            // Page Info
            $("#pageInfo").text(`Showing ${totalRows > 0 ? start + 1 : 0} to ${Math.min(end, totalRows)} of ${totalRows} entries`);

            // Generate Pagination
            let paginationHtml = "";
            for (let i = 1; i <= totalPages; i++) {
                paginationHtml += `<li class="page-item ${i === currentPage ? 'active' : ''}">
                            <a class="page-link" href="javascript:void(0)" onclick="goToPage(${i})">${i}</a>
                        </li>`;
            }
            $("#pagination").html(paginationHtml);
        }

        function goToPage(page) {
            currentPage = page;
            updateTable();
        }

        // Real-time Search
        $("#patronSearch").on("keyup", function() {
            var value = $(this).val().toLowerCase();
                $("#patronTable tr").each(function() {
                let isMatch = $(this).text().toLowerCase().indexOf(value) > -1;
                $(this).toggleClass("filtered", !isMatch);
            });
            currentPage = 1;
            updateTable();
        });

        // Initialize
        $(document).ready(function() {
            updateTable();
        });

        function toggleStudentFields(typeSelector, deptSelector, progSelector) {
            const isStudent = $(typeSelector).val() === "Student";
            if (isStudent) {
                $(deptSelector).prop('disabled', false);
                $(progSelector).prop('disabled', false);
            } else {
                $(deptSelector).prop('disabled', true).val("");
                $(progSelector).empty().append('<option value="">N/A</option>').prop('disabled', true);
            }
        }


        const SwalStatic = Swal.mixin({
            showClass: { popup: '', backdrop: '', icon: '' },
            hideClass: { popup: '', backdrop: '', icon: '' }
        });

        const programMap = {
            1: [
                { id: 1, name: 'BACOMM' }, 
                { id: 2, name: 'BMMA' }],
            2: [
                { id: 3, name: 'BSCS' }, 
                { id: 4, name: 'BSIT' }],
            3: [
                { id: 5, name: 'BSBIO' },
                { id: 6, name: 'BSMEDTECH' },
                { id: 7, name: 'BSPHAR' },
                { id: 8, name: 'BSPT' },
                { id: 9, name: 'BSPSY' }
            ],
            4: [
                { id: 10, name: 'BSN' }],
            5: [
                { id: 11, name: 'BSA' },
                { id: 12, name: 'BSAIS' },
                { id: 13, name: 'BSBA' },
                { id: 14, name: 'BSHM' },
                { id: 15, name: 'BSTM' },
                { id: 16, name: 'BSGM' },
                { id: 17, name: 'BSBIA' }
            ],
            6: [
                { id: 18, name: 'BSARC' },
                { id: 19, name: 'BSCE' },
                { id: 20, name: 'BSCHE' },
                { id: 21, name: 'BSCPE' },
                { id: 22, name: 'BSEE' },
                { id: 23, name: 'BSECE' },
                { id: 24, name: 'BSIE' },
                { id: 25, name: 'BSME' }
            ],
            7: [
                { id: 26, name: 'BSAE' }, 
                { id: 27, name: 'BSAVM' }],
            8: [
                { id: 28, name: 'BSMARE' }, 
                { id: 29, name: 'BSMT' }],
            9: [
                { id: 30, name: 'STEM' },
                { id: 31, name: 'ABM' },
                { id: 32, name: 'HUMSS' },
                { id: 33, name: 'ICT' }
            ]
        };

        // Helper function to fill program dropdowns
        function updateProgramDropdown(deptSelector, progSelector, selectedProgId = 0) {
                const deptId = $(deptSelector).val();
                const $progDropdown = $(progSelector);
                $progDropdown.empty().append('<option value="">Select Program</option>');

            if (programMap[deptId]) {
                programMap[deptId].forEach(prog => {
                    const isSelected = prog.id == selectedProgId ? "selected" : "";
                    $progDropdown.append(`<option value="${prog.id}" ${isSelected}>${prog.name}</option>`);
                });
            }
        }

        $(document).ready(function() {
            $('#addDept').change(function() { updateProgramDropdown('#addDept', '#addProg'); });
            $('#editDept').change(function() { updateProgramDropdown('#editDept', '#editProg'); });
        });

        function openAddModal() {
            $('#addId, #addFirst, #addLast, #addEmail, #addDept').val('');
            $('#addProg').empty().append('<option value="">Select a Department first</option>');
            new bootstrap.Modal(document.getElementById('addModal')).show();
        }

               function toggleStudentFields(typeSelector, deptSelector, progSelector) {
            const isStudent = $(typeSelector).val() === "Student";
            if (isStudent) {
                $(deptSelector).prop('disabled', false);
                $(progSelector).prop('disabled', false);
            } else {
                $(deptSelector).prop('disabled', true).val("");
                $(progSelector).empty().append('<option value="">N/A</option>').prop('disabled', true);
            }
        }

        // Logic for Adding
        function createPatron() {
            const isStudent = $('#addType').val() === "Student";

            var patron = {
                PatronId: $('#addId').val(),
                FirstName: $('#addFirst').val(),
                LastName: $('#addLast').val(),
                Email: $('#addEmail').val(),
                
                DeptId: isStudent ? parseInt($('#addDept').val()) : null,
                ProgramId: isStudent ? parseInt($('#addProg').val()) : null
            };

            $.ajax({
                url: '/Patron/AddPatron',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(patron),
                success: function(res) {
                    if(res.success) location.reload();
                    else Swal.fire('Error', res.message, 'error');
                }
            });
        }

    
        function openEditModal(id) {
            $.get('/Patron/GetPatronDetails/' + id, function(data) {
                if (data) {
                    $('#editId').val(data.patronId);
                    $('#editFirst').val(data.firstName);
                    $('#editLast').val(data.lastName);
                    $('#editEmail').val(data.email);

                    
                    if (data.deptId) {
                        $('#editType').val("Student");
                        $('#editDept').val(data.deptId).prop('disabled', false);
                        updateProgramDropdown('#editDept', '#editProg', data.programId);
                        $('#editProg').prop('disabled', false);
                    } else {
                        $('#editType').val("NonStudent");
                        $('#editDept').val("").prop('disabled', true);
                        $('#editProg').empty().append('<option value="">N/A</option>').prop('disabled', true);
                    }
                    new bootstrap.Modal(document.getElementById('editModal')).show();
                }
            });
        }

       
        function savePatron() {
            const isStudent = $('#editType').val() === "Student";

            var data = {
                PatronId: $('#editId').val(),
                FirstName: $('#editFirst').val(),
                LastName: $('#editLast').val(),
                Email: $('#editEmail').val(),
                DeptId: isStudent ? parseInt($('#editDept').val()) : null,
                ProgramId: isStudent ? parseInt($('#editProg').val()) : null
            };

            $.ajax({
                url: '/Patron/UpdatePatron',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(data),
                success: function(res) {
                    if(res.success) location.reload();
                    else Swal.fire('Error', res.message, 'error');
                }
            });
        }
    </script>
    <style>
        .page-link {
            color: #1a2035;
        }

        .page-item.active .page-link {
            background-color: #1a2035;
            border-color: #1a2035;
            color: white;
        }
    </style>
}