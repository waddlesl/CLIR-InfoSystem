<div class="container-fluid px-4 mt-2" id="reports-page-container">
    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap">
        <div>
            <h4 class="fw-bold mb-0" style="color: #1a2035;">Reports & Analytics</h4>
            <small class="text-muted">Book A Seat Insights (Rizal Campus)</small>
        </div>
        <div class="d-flex justify-content-end align-items-center filter-container">
            <partial name="_ReportFilter" />
        </div>
    </div>

    <div class="report-tabs mb-4 d-flex flex-wrap gap-1 p-1 bg-light rounded-pill shadow-sm" style="width: fit-content; border: 1px solid #dee2e6;">
        <a asp-controller="Report" asp-action="ReportAndAnalytics" class="nav-link px-3 py-1 rounded-pill fw-bold active-tab">Book A Seat (Rizal)</a>
        <a asp-controller="Report" asp-action="BookASeatEinstienReport" class="nav-link px-3 py-1 rounded-pill fw-bold text-muted">Book A Seat (Einstein)</a>
        <a asp-controller="Report" asp-action="BookBorrowingReport" class="nav-link px-3 py-1 rounded-pill fw-bold text-muted">Book Borrowing</a>
        <a asp-controller="Report" asp-action="BookALibrarianReport" class="nav-link px-3 py-1 rounded-pill fw-bold text-muted">Book a Librarian</a>
        <a asp-controller="Report" asp-action="ODDSReports" class="nav-link px-3 py-1 rounded-pill fw-bold text-muted">ODDS</a>
        <a asp-action="GrammarlyAndTurnitinReport" asp-route-service="Grammarly" class="nav-link px-3 py-1 rounded-pill fw-bold @(ViewBag.CurrentService == "Grammarly" ? "active-tab" : "text-muted")">Grammarly</a>
        <a asp-action="GrammarlyAndTurnitinReport" asp-route-service="Turnitin" class="nav-link px-3 py-1 rounded-pill fw-bold @(ViewBag.CurrentService == "Turnitin" ? "active-tab" : "text-muted")">Turnitin</a>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm text-white" style="background-color: #1e2953; border-radius: 15px;">
                <div class="card-body d-flex flex-column justify-content-center p-4">
                    <span class="text-uppercase small fw-bold opacity-75">Total Reservations</span>
                    <h1 class="display-4 fw-bold my-2">@ViewBag.RBookingCount</h1>
                    <p class="mb-0 opacity-75 small">Total successful bookings for Rizal.</p>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card h-100 border-0 shadow-sm" style="border-radius: 15px;">
                <div class="card-body p-4">
                    <span class="text-muted text-uppercase small fw-bold d-block mb-3">Volume per hour</span>
                    <div class="d-flex align-items-end justify-content-between px-2" style="height: 120px;">
                        <div class="bg-danger opacity-25 rounded-top" style="width: 12%; height: 40%;"></div>
                        <div class="bg-danger opacity-50 rounded-top" style="width: 12%; height: 70%;"></div>
                        <div class="bg-danger opacity-25 rounded-top" style="width: 12%; height: 50%;"></div>
                        <div class="bg-danger rounded-top" style="width: 12%; height: 90%;"></div>
                        <div class="bg-danger opacity-50 rounded-top" style="width: 12%; height: 30%;"></div>
                        <div class="bg-danger opacity-75 rounded-top" style="width: 12%; height: 65%;"></div>
                    </div>
                    <p class="text-center text-muted small mt-2 mb-0">Peak activity times</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3 mt-1">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm border-top border-4" style="border-top-color: #ed1e28 !important;">
                <div class="card-body p-3 text-center">
                    <span class="text-muted small fw-bold d-block">College</span>
                    <h3 class="fw-bold mb-0" style="color: #1e2953;">@ViewBag.RBookingCountForCollege</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm border-top border-4" style="border-top-color: #ed1e28 !important;">
                <div class="card-body p-3 text-center">
                    <span class="text-muted small fw-bold d-block">SHS</span>
                    <h3 class="fw-bold mb-0" style="color: #1e2953;">@ViewBag.RBookingCountForSHS</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm border-top border-4" style="border-top-color: #1e2953 !important;">
                <div class="card-body p-3 text-center">
                    <span class="text-muted small fw-bold d-block">Top Department</span>
                    <h5 class="fw-bold mb-0 text-truncate" style="color: #ed1e28;">@ViewBag.RBookingTopDepartment</h5>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm border-top border-4" style="border-top-color: #1e2953 !important;">
                <div class="card-body p-3 text-center">
                    <span class="text-muted small fw-bold d-block">Preferred Seat</span>
                    <h5 class="fw-bold mb-0" style="color: #ed1e28;">@ViewBag.RBookingPreferedSeat</h5>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Ultra-Compact Filter Scaling */
    .filter-container .btn {
        padding: 4px 12px !important;
        font-size: 0.75rem !important;
    }

    .filter-container .form-control,
    .filter-container .form-select {
        font-size: 0.75rem !important;
        padding: 4px 8px !important;
    }

    /* Small Tab Buttons */
    .report-tabs .nav-link {
        font-size: 0.7rem !important;
        padding: 4px 12px !important;
        transition: all 0.2s ease;
        border: none !important;
    }

    .active-tab {
        background-color: #1e2953 !important;
        color: white !important;
        box-shadow: 0 4px 8px rgba(30, 41, 83, 0.2);
    }

    .nav-link:hover:not(.active-tab) {
        color: #ed1e28 !important;
    }

    .card {
        transition: transform 0.2s;
        border-radius: 12px;
    }

        .card:hover {
            transform: translateY(-3px);
        }
</style>