<div class="container mt-3">
<div id="reports-page-container">
    <div class="d-flex justify-content-between align-items-end mb-4 flex-wrap">
        <div class="col-md-4">
            <h2 class="fw-bold mb-1">Reports & Analytics</h2>
        </div>
        <div class="col-md-6 d-flex justify-content-end">
            <div class="col-md-12">
                <partial name="_ReportFilter" />
            </div>
        </div>
    </div>

    <div class="report-tabs">
        <a asp-controller="Report" asp-action="ReportDashboard" class="tab">Book A Seat (Rizal)</a>
        <a asp-controller="Report" asp-action="BookASeatEinstienReport" class="tab active">Book A Seat (Einstein)</a>
        <a asp-controller="Report" asp-action="BookBorrowingReport" class="tab">Book Borrowing</a>
        <a asp-controller="Report" asp-action="BookALibrarianReport" class="tab">Book a Librarian</a>
        <a asp-controller="Report" asp-action="ODDSReports" class="tab">ODDS</a>
        <a asp-action="GrammarlyAndTurnitinReport" asp-route-service="Grammarly" class="tab @(ViewBag.CurrentService == "Grammarly" ? "active" : "")">Grammarly</a>
        <a asp-action="GrammarlyAndTurnitinReport" asp-route-service="Turnitin" class="tab @(ViewBag.CurrentService == "Turnitin" ? "active" : "")">Turnitin</a>
    </div>

    <div class="dashboard-grid">
        <div class="report-card dark-card d-flex flex-column justify-content-center py-4">
            <span class="card-label opacity-75">Total Seat Reservations</span>
            <h1 class="card-value">@ViewBag.EBookingCount</h1>
            <p class="card-subtext">Total Book a Seat for Einstien Campus.</p>
        </div>

        <div class="report-card">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <span class="card-label">Average Visitors (Mon-Sat)</span>
                <i class="fas fa-chart-bar text-danger"></i>
            </div>
            <div class="graph-box">
                <canvas id="visitorChart"></canvas>
            </div>
        </div>
    </div>

    <div class="stats-secondary-grid mt-4">
        <div class="report-card border-top border-secondary border-4">
            <span class="card-label">College Level</span>
            <h2 class="card-value">@ViewBag.EBookingCountForCollege</h2>
        </div>

        <div class="report-card border-top border-secondary border-4">
            <span class="card-label">SHS Level</span>
            <h2 class="card-value">@ViewBag.EBookingCountForSHS</h2>
        </div>

        <div class="report-card border-top border-secondary border-4 text-center">
            <span class="card-label">Top Department</span>
            <h2 class="card-value" style="font-size: 1.4rem;">@ViewBag.EBookingTopDepartment</h2>
        </div>
    </div>
</div>
</div>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function() {
        const ctx = document.getElementById('visitorChart').getContext('2d');
        
        const gradient = ctx.createLinearGradient(0, 0, 0, 400);
        gradient.addColorStop(0, '#CC0000');
        gradient.addColorStop(1, 'rgba(204, 0, 0, 0.5)');

        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(ViewBag.VisitorLabels ?? "['No Data']"),
                datasets: [{
                    data: @Html.Raw(ViewBag.VisitorData ?? "[0]"),
                    backgroundColor: gradient,
                    borderRadius: 8,
                    barThickness: 30
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: { color: '#f0f0f0', drawBorder: false },
                        ticks: { stepSize: 1, color: '#999' }
                    },
                    x: {
                        grid: { display: false },
                        ticks: { color: '#666', font: { weight: '600' } }
                    }
                }
            }
        });
    });
</script>