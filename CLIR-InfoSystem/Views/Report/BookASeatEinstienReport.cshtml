<div id="reports-page-container">
    <h2 style="margin-bottom:20px">Reports & Analytics</h2>
    <div class="report-tabs">
        <a asp-controller="Report" asp-action="ReportDashboard" class="tab">Book A Seat (Rizal)</a>
        <a asp-controller="Report" asp-action="BookASeatEinstienReport" class="tab active">Book A Seat (Einstein)</a>
        <a asp-controller="Report" asp-action="BookBorrowingReport" class="tab">Book Borrowing</a>
        <a asp-controller="Report" asp-action="BookALibrarianReport" class="tab">Book a Librarian</a>
        <a asp-controller="Report" asp-action="ODDSReports" class="tab">ODDS</a>
        <a asp-action="GrammarlyAndTurnitinReport" asp-route-service="Grammarly" class="tab @(ViewBag.CurrentService == "Grammarly" ? "active" : "")">Grammarly</a>
        <a asp-action="GrammarlyAndTurnitinReport" asp-route-service="Turnitin" class="tab @(ViewBag.CurrentService == "Turnitin" ? "active" : "")">Turnitin</a>
    </div>

    <h2 class="section-subtitle">Book A Seat (Einstein)</h2>
    <partial name="_ReportFilter" />
  
    <div class="stats-row-top">
        <div class="report-card dark-card">
            <p class="card-label">Total Reservations</p>
            <h1 class="card-value">@ViewBag.EBookingCount</h1>
        </div>

        <div class="report-card" style="flex: 2;">
            <p class="card-label">Average Volume (Mon-Sat)</p>
            <div class="graph-box" style="height: 200px; position: relative;">
                <canvas id="visitorChart"></canvas>
            </div>
        </div>
    </div>

    <div class="row g-4 mt-2">
        <div class="col-md-6">
            <div class="report-card mini-card">
                <p class="card-label">College</p>
                <h2 class="card-value">@ViewBag.EBookingCountForCollege</h2>
            </div>
        </div>
        <div class="col-md-6">
            <div class="report-card mini-card">
                <p class="card-label">SHS</p>
                <h2 class="card-value">@ViewBag.EBookingCountForSHS</h2>
            </div>
        </div>
    </div>
    <div class="row g-4 mt-2">
        <div class="col-md-12">
            <div class="report-card mini-card">
                <p class="card-label">Most Dept. Utilized</p>
                <h2 class="card-value">@ViewBag.EBookingTopDepartment</h2>
            </div>
        </div>
        <!--<div class="col-md-6">
            <div class="report-card mini-card">
                <p class="card-label">Most Utilized Seat</p>
                <h2 class="card-value">@ViewBag.RBookingPreferedSeat</h2>
            </div>
        </div>-->
    </div>

   
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>

    //script to get years for dropdown
    const currentYear = new Date().getFullYear();
    const selectElement = document.getElementById('yearDropdown');
    const yearsToInclude = 5;


    for (let i = 0; i <= yearsToInclude; i++) {
      const year = currentYear - i;
      const option = document.createElement('option');
      option.value = year;
      option.text = year;

      if (i === 0) option.selected = true;

      selectElement.appendChild(option);
    }

    const updateLink = () => {
        const yr = document.getElementById('yearDropdown').value;
        const tm = document.getElementById('termDropdown').value;
        document.getElementById('downloadBtn').href = `/download-stats?selectedYear=${yr}&selectedTerm=${tm}`;
    };
    document.getElementById('yearDropdown').addEventListener('change', updateLink);
    document.getElementById('termDropdown').addEventListener('change', updateLink);
    updateLink();

    document.addEventListener("DOMContentLoaded", function () {
        const ctx = document.getElementById('visitorChart').getContext('2d');

        const labels = @Html.Raw(ViewBag.VisitorLabels);
        const dataValues = @Html.Raw(ViewBag.VisitorData);

        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Avg Visitors(Per Day)',
                    data: dataValues,
                    backgroundColor: '#CC0000',
                    borderRadius: 5,
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false }
                },
            scales: {
                y: {
                    beginAtZero: true,
                    grid: { display: false },
                    ticks: {
                        font: { size: 10 },
                        //to show whole numbers para mas maganda tignan
                        stepSize: 1,
                        callback: function(value) {
                            if (value % 1 === 0) { return value; }
                            }
                        }
                    },
                x: {
                    grid: { display: false },
                    ticks: { font: { size: 10 } }
                    }
                }
            }
        });
    });
</script>