<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>

    document.addEventListener("DOMContentLoaded", function () {
        const ctx = document.getElementById('visitorChart').getContext('2d');

        const labels = @Html.Raw(ViewBag.VisitorLabels);
        const dataValues = @Html.Raw(ViewBag.VisitorData);

        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Avg Visitors(Per Day)',
                    data: dataValues,
                    backgroundColor: '#CC0000',
                    borderRadius: 5,
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false }
                },
            scales: {
                y: {
                    beginAtZero: true,
                    grid: { display: false },
                    ticks: {
                        font: { size: 10 },
                        //to show whole numbers para mas maganda tignan
                        stepSize: 1,
                        callback: function(value) {
                            if (value % 1 === 0) { return value; }
                            }
                        }
                    },
                x: {
                    grid: { display: false },
                    ticks: { font: { size: 10 } }
                    }
                }
            }
        });
    });
</script>