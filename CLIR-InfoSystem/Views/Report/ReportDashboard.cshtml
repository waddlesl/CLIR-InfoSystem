<div id="reports-page-container">
    <h2 style="margin-bottom:20px">Reports & Analytics</h2>

    <div class="report-tabs">
        <a asp-controller="Report" asp-action="ReportDashboard" class="tab active">Book A Seat (Rizal)</a>
        <a asp-controller="Report" asp-action="BookASeatEinstienReport" class="tab">Book A Seat (Einstein)</a>
        <a asp-controller="Report" asp-action="BookBorrowingReport" class="tab">Book Borrowing</a>
        <a asp-controller="Report" asp-action="BookALibrarianReport" class="tab">Book a Librarian</a>
        <a asp-controller="Report" asp-action="ODDSReports" class="tab">ODDS</a>
        <a asp-action="GrammarlyAndTurnitinReport" asp-route-service="Grammarly" class="tab @(ViewBag.CurrentService == "Grammarly" ? "active" : "")">Grammarly</a>
        <a asp-action="GrammarlyAndTurnitinReport" asp-route-service="Turnitin" class="tab @(ViewBag.CurrentService == "Turnitin" ? "active" : "")">Turnitin</a>
    </div>

    <h2 class="section-subtitle">Book A Seat (Rizal)</h2>
    <form method="get">
        <select id="yearDropdown" name="selectedYear" class="form-control mb-2">
        </select>
        <select id="termDropdown" name="selectedTerm" class="form-control mb-2">
            <option value="">Select Term</option>
            <option value="1">1st Term</option>
            <option value="2">2nd Term</option>
            <option value="3">3rd Term</option>
        </select>
        <button type="submit" asp-controller="Report" asp-action="ReportDashboard" class="btn-red mt-3">Filter</button>
        <button type="submit" asp-controller="Report" asp-action="DownloadReport" class="btn-red mt-3">Download PDF</button>
    </form>
    <div class="stats-row-top">
        <div class="report-card dark-card">
            <p class="card-label">Total Reservations</p>
            <h1 class="card-value">@ViewBag.RBookingCount</h1>
        </div>

        <div class="report-card graph-placeholder">
            <p class="card-label">Volume per hour</p>
            <div class="graph-box">
                <p>Graph Data Placeholder</p>
                <div class="simple-bar-container">
                    <div class="bar" style="height: 40%"></div>
                    <div class="bar" style="height: 70%"></div>
                    <div class="bar" style="height: 50%"></div>
                    <div class="bar" style="height: 90%"></div>
                    <div class="bar" style="height: 30%"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mt-2">
        <div class="col-md-6">
            <div class="report-card mini-card">
                <p class="card-label">College</p>
                <h2 class="card-value">@ViewBag.RBookingCountForCollege</h2>
            </div>
        </div>
        <div class="col-md-6">
            <div class="report-card mini-card">
                <p class="card-label">SHS</p>
                <h2 class="card-value">@ViewBag.RBookingCountForSHS</h2>
            </div>
        </div>
    </div>
    <div class="row g-4 mt-2">
        <div class="col-md-6">
            <div class="report-card mini-card">
                <p class="card-label">Most Dept. Utilized</p>
                <h2 class="card-value">@ViewBag.RBookingTopDepartment</h2>
            </div>
        </div>
        <div class="col-md-6">
            <div class="report-card mini-card">
                <p class="card-label">Most Utilized Seat</p>
                <h2 class="card-value">@ViewBag.RBookingPreferedSeat</h2>
            </div>
        </div>
    </div>

</div>


<script>

    //script to get years for dropdown
    const currentYear = new Date().getFullYear();
    const selectElement = document.getElementById('yearDropdown');
    const yearsToInclude = 5;


    for (let i = 0; i <= yearsToInclude; i++) {
      const year = currentYear - i;
      const option = document.createElement('option');
      option.value = year;
      option.text = year;

      if (i === 0) option.selected = true;

      selectElement.appendChild(option);
    }

    const updateLink = () => {
        const yr = document.getElementById('yearDropdown').value;
        const tm = document.getElementById('termDropdown').value;
        document.getElementById('downloadBtn').href = `/download-stats?selectedYear=${yr}&selectedTerm=${tm}`;
    };
    document.getElementById('yearDropdown').addEventListener('change', updateLink);
    document.getElementById('termDropdown').addEventListener('change', updateLink);
    updateLink();
</script>