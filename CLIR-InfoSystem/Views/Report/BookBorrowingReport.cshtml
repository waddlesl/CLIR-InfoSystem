<div id="reports-page-container">
    <h2 style="margin-bottom:20px">Reports & Analytics</h2>
    <div class="report-tabs">
        <a asp-controller="Report" asp-action="ReportDashboard" class="tab">Book A Seat (Rizal)</a>
        <a asp-controller="Report" asp-action="BookASeatEinstienReport" class="tab">Book A Seat (Einstein)</a>
        <a asp-controller="Report" asp-action="BookBorrowingReport" class="tab active">Book Borrowing</a>
        <a asp-controller="Report" asp-action="BookALibrarianReport" class="tab">Book a Librarian</a>
        <a asp-controller="Report" asp-action="ODDSReports" class="tab">ODDS</a>
        <a asp-action="GrammarlyAndTurnitinReport" asp-route-service="Grammarly" class="tab @(ViewBag.CurrentService == "Grammarly" ? "active" : "")">Grammarly</a>
        <a asp-action="GrammarlyAndTurnitinReport" asp-route-service="Turnitin" class="tab @(ViewBag.CurrentService == "Turnitin" ? "active" : "")">Turnitin</a>
    </div>

    <h2 class="section-subtitle">Book Borrowing</h2>

    <div class="stats-row-top">
        <div class="report-card dark-card">
            <p class="card-label">Total Reservations</p>
            <h1 class="card-value">@ViewBag.BookBorrowCount</h1>
        </div>
        <div class="report-card mini-card">
            <p class="card-label">Top Borrower</p>
            <h2 class="card-value">@ViewBag.BookTopProgram</h2>
        </div>
    </div>

    <div class="stats-row-bottom">

        <div class="row g-4 mt-2">
            <div class="col-md-6">
                <div class="report-card mini-card">
                    <p class="card-label">College</p>
                    <h2 class="card-value">@ViewBag.BookBorrowCountForCollege</h2>
                </div>
            </div>
            <div class="col-md-6">
                <div class="report-card mini-card">
                    <p class="card-label">SHS</p>
                    <h2 class="card-value">@ViewBag.BookBorrowCountForSHS</h2>
                </div>
            </div>
        </div>

        <div class="report-card mini-card">
            <h3 class="card-label">Top 5 Most Borrowed Books This Year(@DateTime.Now.Year)</h3>
            <ul style="list-style: none; padding: 0;">
                @if (@ViewBag.BookTopBooks == null)
                {
                    <li class="card-value">N/A</li>

                }
                else
                {
                    @foreach (var book in ViewBag.BookTopBooks)
                    {
                        <li style="display: flex; justify-content: space-between; border-bottom: 1px solid #eee;">
                            <strong>@book.Title</strong>
                            <strong>@book.Count</strong>
                        </li>
                    }
                }

            </ul>
        </div>
    </div>
</div>