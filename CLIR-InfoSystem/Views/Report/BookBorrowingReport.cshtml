<div class="container mt-3">
<div id="reports-page-container">
    <div class="d-flex justify-content-between align-items-end mb-4 flex-wrap">
        <div class="col-md-4">
            <h2 class="fw-bold mb-1">Reports & Analytics</h2>
            
        </div>
        <div class="col-md-6 d-flex justify-content-end">
            <div class="col-md-12">
                <partial name="_ReportFilter" />
            </div>
        </div>
    </div>

    <div class="report-tabs">
        <a asp-controller="Report" asp-action="ReportDashboard" class="tab">Book A Seat (Rizal)</a>
        <a asp-controller="Report" asp-action="BookASeatEinstienReport" class="tab">Book A Seat (Einstein)</a>
        <a asp-controller="Report" asp-action="BookBorrowingReport" class="tab active">Book Borrowing</a>
        <a asp-controller="Report" asp-action="BookALibrarianReport" class="tab">Book a Librarian</a>
        <a asp-controller="Report" asp-action="ODDSReports" class="tab">ODDS</a>
        <a asp-action="GrammarlyAndTurnitinReport" asp-route-service="Grammarly" class="tab @(ViewBag.CurrentService == "Grammarly" ? "active" : "")">Grammarly</a>
        <a asp-action="GrammarlyAndTurnitinReport" asp-route-service="Turnitin" class="tab @(ViewBag.CurrentService == "Turnitin" ? "active" : "")">Turnitin</a>
    </div>

    <div class="dashboard-grid">
        <div class="report-card dark-card d-flex flex-column justify-content-center py-4">
            <span class="card-label opacity-75">Total Books Borrowed</span>
            <h1 class="card-value">@ViewBag.BookBorrowCount</h1>
            <p class="card-subtext">Total circulation recorded for this period.</p>
        </div>

        <div class="report-card">
            <span class="card-label">Breakdown by Academic Level</span>
            <div class="mt-3">
                @{
                    var total = (double)(ViewBag.LBookingCount ?? 1);

                }

                <div class="mb-4">
                    <div class="d-flex justify-content-between mb-1">
                        <span class="fw-bold">College</span>
                        <span class="fw-bold">@ViewBag.BookBorrowCountForCollege</span>
                    </div>
                </div>

                <div>
                    <div class="d-flex justify-content-between mb-1">
                        <span class="fw-bold">Senior High School</span>
                        <span class="fw-bold">@ViewBag.BookBorrowCountForSHS</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="stats-secondary-grid mt-4">
        <div class="report-card border-top border-secondary border-4">
            <span class="card-label">Top Program</span>
            <h2 class="card-value" style="font-size: 1.5rem;">@ViewBag.BookTopProgram</h2>
        </div>

        <div class="report-card border-top border-secondary border-4">
            <span class="card-label">Current Borrowed</span>
            <h2 class="card-value">@ViewBag.CurrentBorrowers</h2>
        </div>

        <div class="report-card border-top border-secondary border-4">
            <span class="card-label">Overdue Books</span>
            <h2 class="card-value">@ViewBag.OverdueCount</h2>
        </div>
    </div>
</div>
</div>