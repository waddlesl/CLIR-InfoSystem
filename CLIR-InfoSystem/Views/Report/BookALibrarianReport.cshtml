<div id="reports-page-container">
    <div class="d-flex justify-content-between align-items-end mb-4 flex-wrap">
        <div class="col-md-4">
            <h2 class="fw-bold mb-1">Reports & Analytics</h2>
            
        </div>
        <div class="col-md-6 d-flex justify-content-end">
            <div class="col-md-12">
                <partial name="_ReportFilter" />
            </div>
        </div>
    </div>

    <div class="report-tabs">
        <a asp-controller="Report" asp-action="ReportDashboard" class="tab">Book A Seat (Rizal)</a>
        <a asp-controller="Report" asp-action="BookASeatEinstienReport" class="tab">Book A Seat (Einstein)</a>
        <a asp-controller="Report" asp-action="BookBorrowingReport" class="tab">Book Borrowing</a>
        <a asp-controller="Report" asp-action="BookALibrarianReport" class="tab active">Book a Librarian</a>
        <a asp-controller="Report" asp-action="ODDSReports" class="tab">ODDS</a>
        <a asp-action="GrammarlyAndTurnitinReport" asp-route-service="Grammarly" class="tab @(ViewBag.CurrentService == "Grammarly" ? "active" : "")">Grammarly</a>
        <a asp-action="GrammarlyAndTurnitinReport" asp-route-service="Turnitin" class="tab @(ViewBag.CurrentService == "Turnitin" ? "active" : "")">Turnitin</a>
    </div>

    <div class="dashboard-grid">
        <div class="report-card dark-card d-flex flex-column justify-content-center">
            <span class="card-label">Total Appointments</span>
            <h1 class="card-value">@ViewBag.LBookingCount</h1>
            <p class="card-subtext">Total librarian consultations.</p>
        </div>

        <div class="report-card">
            <span class="card-label">Breakdown by Academic Level</span>
            <div class="mt-3">
                @{
                    var total = (double)(ViewBag.LBookingCount ?? 1);
                    
                }

                <div class="mb-4">
                    <div class="d-flex justify-content-between mb-1">
                        <span class="fw-bold">College</span>
                        <span class="fw-bold">@ViewBag.LBookingCountForCollege</span>
                    </div>
                </div>

                <div>
                    <div class="d-flex justify-content-between mb-1">
                        <span class="fw-bold">Senior High School</span>
                        <span class="fw-bold">@ViewBag.LBookingCountForSHS</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="stats-secondary-grid mt-4">
        <div class="report-card d-flex flex-column border-top border-secondary border-4 justify-content-between">
            <div>
                <span class="card-label">Top Department</span>
                <h2 class="card-value mt-2" style="font-size: 1.6rem;">@ViewBag.LBookingTopDepartment</h2>
            </div>
        </div>

        <div class="report-card border-top border-secondary border-4" style="grid-column: span 2;">
            <span class="card-label">Top Programs</span>

            @if (ViewBag.LBookingTopProgram == null || !Enumerable.Any(ViewBag.LBookingTopProgram))
            {
                <div class="text-center py-4">
                    <p class="text-muted">No program data available for this range.</p>
                </div>
            }
            else
            {
                <div class="mt-3">
                    @foreach (var item in ViewBag.LBookingTopProgram)
                    {
                        
                        <div class="mb-3">
                            <div class="d-flex justify-content-between small mb-1">
                                <span class="fw-bold text-dark">@item.Program</span>
                                <span class="badge bg-light text-dark border">@item.Count</span>
                            </div>
                                
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>