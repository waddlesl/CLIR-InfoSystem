@model IEnumerable<CLIR_InfoSystem.Models.BookBorrowing>

<h3>📖 My Current Borrowings</h3>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Book Title</th>
            <th>Borrow Date</th>
            <th>Due Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var loan in Model)
        {
            <tr>
                <td>@loan.Book?.Title</td>
                <td>@loan.BorrowDate.ToString("MMM dd, yyyy")</td>
                <td>@loan.DueDate?.ToString("MMM dd, yyyy")</td>
                <td><span class="badge bg-warning text-dark">@loan.Status</span></td>
            </tr>
        }
    </tbody>
</table>