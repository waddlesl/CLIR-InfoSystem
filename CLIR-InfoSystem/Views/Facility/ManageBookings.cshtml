@model IEnumerable<CLIR_InfoSystem.Models.SeatBooking>

<h2>Manage Seat Bookings</h2>

<div id="bm-page-container">
    <div class="card p-3 shadow-sm border-0">
        <div class="card-header">
            <h3 class="card-title">Booking Requests</h3>

        </div>

        <div class="table-responsive">
            <table class="table align-middle text-center">
                <thead>
                <tr>
                    <th>Date</th>
                    <th>Patron ID</th>
                    <th>Seat ID</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.Where(sb => sb.Status == "Reserved"))
                {
                    <tr>
                        <td>@item.BookingDate.ToShortDateString()</td>
                        <td>@item.PatronId</td>
                        <td>@item.SeatId</td>
                        <td>
                            @{
                                // Dynamic badge colors based on status
                                string badgeClass = item.Status switch
                                {
                                    "Reserved" => "bg-primary",
                                    "Completed" => "bg-success",
                                    "Cancelled" => "bg-danger",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @badgeClass">@item.Status</span>
                        </td>
                        <td>
                            @if (item.Status == "Reserved")
                            {
                                    <div class="d-flex gap-2 justify-content-center align-items-center">
                                    <form asp-action="CheckIn" method="post">
                                        <input type="hidden" name="bookingId" value="@item.BookingId" />
                                        <button type="submit" class="btn btn-sm btn-success">Mark Completed</button>
                                    </form>

                                    @* Optional: Add a Cancel button *@
                                    <form asp-action="CancelBooking" method="post">
                                        <input type="hidden" name="bookingId" value="@item.BookingId" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Cancel</button>
                                    </form>
                                </div>
                            }
                            else
                            {
                                <small class="text-muted">No actions available</small>
                            }
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
    <br />
    <div class="card p-3 shadow-sm border-0">
        <div class="card-header">
            <h3 class="card-title">Bookings</h3>

        </div>

        <div class="table-responsive">
            <table class="table align-middle text-center">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Patron ID</th>
                        <th>Seat ID</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Where(sb => sb.Status != "Reserved"))
                    {
                        <tr>
                            <td>@item.BookingDate.ToShortDateString()</td>
                            <td>@item.PatronId</td>
                            <td>@item.SeatId</td>
                            <td>
                                @{
                                    // Dynamic badge colors based on status
                                    string badgeClass = item.Status switch
                                    {
                                        "Reserved" => "bg-primary",
                                        "Completed" => "bg-success",
                                        "Cancelled" => "bg-danger",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @badgeClass">@item.Status</span>
                            </td>
                            <td>
                                @if (item.Status == "Reserved")
                                {
                                    <div class="d-flex gap-2 justify-content-center align-items-center">
                                        <form asp-action="CheckIn" method="post">
                                            <input type="hidden" name="bookingId" value="@item.BookingId" />
                                            <button type="submit" class="btn btn-sm btn-success">Mark Completed</button>
                                        </form>

                                        @* Optional: Add a Cancel button *@
                                        <form asp-action="CancelBooking" method="post">
                                            <input type="hidden" name="bookingId" value="@item.BookingId" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger">Cancel</button>
                                        </form>
                                    </div>
                                }
                                else
                                {
                                    <small class="text-muted">No actions available</small>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>