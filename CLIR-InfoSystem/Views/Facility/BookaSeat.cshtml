@model CLIR_InfoSystem.Models.SeatBooking

@{
    bool alreadyBooked = ViewBag.AlreadyBooked ?? false;
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold">Book a Library Seat</h2>
        <p class="text-muted small">@DateTime.Now.ToString("MMM dd, yyyy | dddd, h:mm tt")</p>
    </div>

    @if (alreadyBooked)
    {
        <div style="max-width: 600px; margin: 0 auto;">
            <div class="card shadow-sm border-0 p-4 text-center">
                <div class="py-3">
                    <i class="bi bi-calendar-check text-warning" style="font-size: 3rem;"></i>
                    <h4 class="fw-bold mt-3">Reservation Active</h4>
                    <p class="text-muted">You already have a seat reserved. Please complete your current visit or cancel it before booking a new one.</p>
                </div>
                <hr>
                <div class="d-grid">
                    <a href="/Dashboard/PatronDashboard" class="btn btn-warning fw-bold">Return to Dashboard</a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div style="max-width: 600px; margin: 0 auto;">
            <div asp-validation-summary="All" class="text-danger small mb-2"></div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <form asp-action="ConfirmBooking" method="post">
                        <div class="mb-3">
                            <label class="small fw-bold text-muted">BOOKING DATE</label>
                            <input type="date" id="BookingDate" asp-for="BookingDate" class="form-control" required min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="small fw-bold text-muted">BUILDING</label>
                                <select id="Building" class="form-select" required disabled>
                                    <option value="">-- Select --</option>
                                    <option value="Rizal Building">Rizal Building</option>
                                    <option value="Einstein Building">Einstein Building</option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="small fw-bold text-muted">TIME SLOT</label>
                                <select id="SlotId" asp-for="SlotId" class="form-select" required disabled>
                                    <option value="">-- Select Date --</option>
                                </select>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="small fw-bold text-muted">AVAILABLE SEATS</label>
                            <select id="SeatId" asp-for="SeatId" class="form-select" required disabled>
                                <option value="">-- Complete above fields --</option>
                            </select>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success fw-bold py-2">Confirm Reservation</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        // Updated logic to match the new UI IDs and classes
        $('#BookingDate').change(function() {
            var selectedDate = $(this).val();
            if(selectedDate) {
                $('#Building').prop('disabled', false);
                $.getJSON('/Facility/GetAvailableSlots', { selectedDate: selectedDate }, function(data) {
                    var items = '<option value="">-- Select Slot --</option>';
                    $.each(data, function(i, slot) {
                        items += "<option value='" + slot.slotId + "'>" + slot.displayText + "</option>";
                    });
                    $('#SlotId').html(items).prop('disabled', false);
                });
            }
        });

        $('#Building').change(function() {
            if($(this).val()) {
                $('#SeatId').val('').prop('disabled', true);
            }
        });

        $('#BookingDate, #Building, #SlotId').change(function() {
            var date = $('#BookingDate').val();
            var bld = $('#Building').val();
            var slot = $('#SlotId').val();

            if (date && bld && slot) {
                $('#SeatId').prop('disabled', false);
                $.getJSON('/Facility/GetAvailableSeats', { building: bld, slotId: slot, date: date }, function(data) {
                    var items = '<option value="">-- Select a Seat --</option>';
                    $.each(data, function(i, seat) {
                        items += "<option value='" + seat.id + "'>" + seat.name + "</option>";
                    });
                    $('#SeatId').html(items);
                });
            }
        });
    });
</script>